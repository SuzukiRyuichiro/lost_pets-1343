<h1>Pets</h1>
<div class="row gap-2">
  <% @pets.each do |pet| %>
    <div class="card col-3">
      <div class="card-body">
        <h5 class="card-title"><%= pet.name %></h5>
        <h6 class="card-subtitle mb-2 text-body-secondary"><%= pet.species %></h6>
        <p class="card-text"><%= pet.address %></p>
        <%= link_to 'Details', pet_path(pet), class: 'card-link btn btn-primary' %>
        <%= link_to 'Delete', pet_path(pet), data: {turbo_method: 'delete', turbo_confirmation: 'Are you sure?'}, class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
</div>
<%= link_to "Add", new_pet_path, class: 'btn btn-success mt-4' %>
